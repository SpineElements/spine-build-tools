const cmdArgs = require('command-line-args');
const {sassToCss} = require('../lib/sass-transpiler');

const optionsDefinitions = [
    {name: 'sassSrc', alias: 's', defaultOption: true, type: String},
    {name: 'templateSrc', alias: 't', type: String},
    {name: 'output', alias: 'o', type: String}
];
const {sassSrc, templateSrc, output} = cmdArgs(optionsDefinitions);

sassToCss(sassSrc, templateSrc, output).catch(error => {
    console.error(error);
    process.exit(1);
});

